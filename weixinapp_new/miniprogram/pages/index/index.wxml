<scroll-view scroll-x bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
<block wx:for="{{nav}}">
  <view wx:if="{{categoryId==item.id}}" class='scroll-view-item current'> {{item.categoryName}} </view>
  <view wx:else class='scroll-view-item'> {{item.categoryName}} </view>
</block>
</scroll-view>